<?xml version="1.0" ?>
<project name="Voxels" width="512" height="512">
	<assets>
		<constants>
			<constant name="GridSize" value = "256" />
		</constants>
		<attributes>
			<attribute name="GridSize" type="PASS" data="INT" value="GridSize" />
		</attributes>
		<scenes>
			<scene name="Cube" >
				<file name="../assets/cube2.obj"/>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV="60" NEAR="0.1" FAR="20.0" />
				<POSITION x="0" y="0.0" z="5" />
				<VIEW x="0.0" y="0.0" z="-1.0" />
				<UP x="0" y="1" z="0" />
			</camera>
		</cameras>
		
		<materialLibs>
			<materialLib filename="../materials/material.mlib"/>
		</materialLibs>
	</assets>
	
	
	<pipelines>
		<pipeline name="voxels" default="true">
			<pass class="default" name="showVoxels">
				<scenes>
					<scene name="Cube" />
				</scenes>	
				<camera name="MainCamera" />
				<viewport name="MainViewport" />
				<materialMaps>			
					<map fromMaterial="*" 
						 toLibrary="Voxels" toMaterial="showVoxels" />
				</materialMaps>				
			</pass>
		</pipeline>
	</pipelines>
</project>