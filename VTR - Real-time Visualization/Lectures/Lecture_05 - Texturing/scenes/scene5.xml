<?xml version="1.0" ?>
<project name="Planet Earth - Texture Model" >
	<assets>
	
		<scenes>
			<scene name="Sphere" >
				<geometry name = "Sphere" type="SPHERE" 
                    material="earth" 
                    SLICES="64" STACKS="32" /> 
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="0.0" g="0.0" b="0.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<POSITION x="0.139" y="1.100" z="-2.086" />
				<VIEW x="-0.073" y="-0.453" z="0.889" />
                <NEAR value = "0.01" />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x="2" y="-2" z="2" />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="../materials/material.mlib" />
		</materialLibs>
		
	</assets>
	
	<pipelines>
	
		<pipeline name="textures" >
		
			<pass class="default" name="texture" >
				<scenes>
					<scene name="Sphere" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="v5" toLibrary="Texture" />
				</materialMaps>
				
			</pass>
		</pipeline>
		
	</pipelines>
</project>