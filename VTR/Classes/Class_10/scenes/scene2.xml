<?xml version="1.0" ?>
<project name="Bezier Tessellation" width="512" height="512">
	<assets>
		<attributes>
			<attribute name="level" data="FLOAT" type="RENDERER" value="8" />
			<attribute name="option" data="INT" type="RENDERER" value="0" />
			<attribute name="ilevel" data="FLOAT" type="RENDERER" value="8" />
			<attribute name="olevel" data="FLOAT" type="RENDERER" value="8" />
			<attribute name="alpha" data="FLOAT" type="RENDERER" value="0.75" />
		</attributes>
		
		<scenes>
			<scene name="Teapot" >
				<file  name="../assets/teapot.patch"/>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="0.0" g="0.0" b="0.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV="60.0" NEAR="1" FAR="100.0" />
				<POSITION x="0" y="1.0" z="7.5" />
				<VIEW x="0.0" y="0.0" z="-1.0" />
				<UP x="0" y="1" z="0" />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x="1.0" y="-0.5" z="-2" />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="../materials/material.mlib"/>
		</materialLibs>
		
	</assets>
	
	<pipelines>
		<pipeline name="Bezier" default="true">
			<pass class="default" name="pass1">
				<scenes>
					<scene name="Teapot" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toLibrary="tessellation" toMaterial="bezier" />
				</materialMaps>
				
			</pass>
			<!--pass class="default" name="pass2">				
				<COLOR_CLEAR value="false" />				
				<DEPTH_CLEAR value="false" />				
				<scenes>					
					<scene name="Teapot" />				
				</scenes>				
				<camera name="MainCamera" />				
				<lights>					
					<light name="Sun" />			
				</lights>			
				<injectionMaps>				
					<map toMaterial = "*" >						
						<shader fromMaterial="bezierGeom" fromLibrary="tessellation" />					
					</map>			
				</injectionMaps>							
			</pass-->	
		</pipeline>
	</pipelines>
	
	<interface>
		<window label="Main Window">
			<var label="level" type="RENDERER" context="CURRENT" component="level" 
				def="min=1 max=64 step=0.01"/>
			<var label="option" type="RENDERER" context="CURRENT" component="option" 
				def="min=0 max=1 "/>
				
		</window>
	</interface>
</project>