<?xml version="1.0" ?>
<project name="Normal Mapping - Deferred" width="512" height="512">
	<assets>

        <attributes>
            <attribute name="Samples" type = "COLOR" data="INT" value="2" />
        </attributes>
		<scenes>
			<scene name="Barrel" param="UNITIZE">
				<TRANSLATE x="0" y="1" z= "0" />
				<file name="../assets/metal_barrel.obj"/>
			</scene>
			<scene name="Plane" >
				<SCALE x="200" y="200" z="200" />
				<file name="../assets/plane.obj"/>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="0.0" g="0.0" b="0.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
                <POSITION x="127.013" y="3.562" z="-8.894" w="1" />
                <VIEW x="0.267" y="-0.041" z="0.963" w="0" />
			</camera>
	</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x="-2" y="-2" z="-2" />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="../materials/material.mlib" />
		</materialLibs>
	</assets>

