<?xml version="1.0"?>
<project name="Teaport - Toon Shader">

    <assets>

        <scenes>
            <scene name="teapot" 
                   filename="../assets/Teapot.3ds" 
                   param="SWAP_YZ UNITIZE"/>
        </scenes>

        <cameras>
            <camera name="main">
                <POSITION x="0" y="0" z="1.750" />
            </camera>
        </cameras>

        <lights>
            <light name="Sun">
                <DIRECTION x="5" y="5" z="5"/>
            </light>
        </lights>

        <materialLibs>
            <materialLib filename="../materials/material.mlib"/>
        </materialLibs>

    </assets>

    <pipelines>
        <pipeline name="toon">
            <pass name="toon" class="default">

                <scenes>
                    <scene name="teapot"/>
                </scenes>

                <camera name="main"/>
                
                <lights>
                    <light name="Sun"/>
                </lights>

                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromLibrary="Toon" fromMaterial="v4"/>
                    </map>
                </injectionMaps>

            </pass>
        </pipeline>
    </pipelines>

</project>