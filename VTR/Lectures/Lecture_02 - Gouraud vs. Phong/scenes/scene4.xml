<?xml version="1.0"?>
<project name="Teapot - Toon Shader">
    
    <assets>

        <scenes>
            <scene name = "teapot" filename = "../assets/Teapot.3ds" param="UNITIZE SWAP_YZ" />
        </scenes>
        
        <cameras>
            <camera name="main">
                <POSITION x="-0.119" y="0" z="-1.843" />
                <LOOK_AT_POINT x="-0.087" y="0.007" z="-0.748" />
            </camera>
        </cameras>

        <lights>
            <light name="Sun" >
                <DIRECTION x="5" y="-5" z="5" />
            </light>
        </lights>

        <materialLibs>
            <materialLib filename="../materials/material.mlib" />
        </materialLibs>

    </assets>

    <pipelines>
        <pipeline name="toon">
            <pass name="toon" class="default" >
                
                <scenes>
                    <scene name="teapot" />
                </scenes>

                <camera name="main" /> 
                
                <lights>
                    <light name="Sun" />
                </lights>

                <injectionMaps>
                    <map toMaterial="*">
                        <shader fromMaterial="v4" fromLibrary="Toon"
                        />
                    </map>
                </injectionMaps>

            </pass>
        </pipeline>
    </pipelines>

</project>