#version 430

// uniforms
uniform sampler2D texEarth;
uniform sampler2D texSpec;
uniform sampler2D texLights;

uniform float shininess = 128;
uniform float timer;

//interpolated inputs
in vec4 eye;
in vec2 tc;
in vec3 n;
in vec3 ld;

// output
out vec4 color;

float snoise(vec4 v);

float noise(vec4 t) {
	float res = 0;

	for(int i = 0; i < 5; ++i) {
		res += snoise(t * pow(2,i))/pow(2,i);
	}
	return res;
}

